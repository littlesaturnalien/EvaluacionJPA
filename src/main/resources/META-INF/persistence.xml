<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="testJPA">
        <!-- java_persistence_relationships = Database Name -->

        <!-- Database Connection Configuration -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>

            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/java_persistence_relationships"/>
            <property name="jakarta.persistence.jdbc.user" value="cesar_silva"/>
            <property name="jakarta.persistence.jdbc.password" value="holamundo"/>

            <!--  This property controls how we are going to manage the database  -->
            <!--  Update means that Hibernate will try to do updates on the schema in the database  -->
            <!--  Hibernate can create or modify tables if it's necessary but never drop tables  -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!--  Indicate that we will be able to see SQL Sentences generated by Hibernate in the console  -->
            <property name="hibernate.show_sql" value="true"/>

        </properties>

    </persistence-unit>
</persistence>